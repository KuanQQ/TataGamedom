@model IEnumerable<TataGamedom.Models.ViewModels.Members.BackendMembersListVM>

@{
	ViewBag.Title = "Index";
}

<h2>後台人員列表</h2>


<table class="table">
	<tr>

		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Account)
		</th>
		@*<th>
				@Html.DisplayNameFor(model => model.Password)
			</th>*@
		@*<th>
				@Html.DisplayNameFor(model => model.Birthday)
			</th>*@
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Phone)
		</th>
		@*<th>
				@Html.DisplayNameFor(model => model.RegistrationDate)
			</th>*@
		<th>
			@Html.DisplayNameFor(model => model.ActiveFlag)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.BackendMembersRoleName)
		</th>
		<th>
			管理權限
		</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>

			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Account)
			</td>
			@*<td>
					@Html.DisplayFor(modelItem => item.Password)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Birthday)
				</td>*@
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Phone)
			</td>
			@*<td>
					@Html.DisplayFor(modelItem => item.RegistrationDate)
				</td>*@
			<td>
				@Html.DisplayFor(modelItem => item.ActiveFlagText)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.BackendMembersRoleName)
			</td>
			<td>
				@Html.ActionLink("修改權限", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
				@*@Html.ActionLink("Details", "Details", new { id = item.Id }) | 
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
			</td>
		</tr>
	}

</table>
