<link href="~/Content/bootstrap theme.css" rel="stylesheet" />
<link href="~/Content/layoutStyle1.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .btn {
        font-size: 16px;
    }
</style>

@model TataGamedom.Models.ViewModels.StockInSheets.StockInSheetVM

@{
    ViewBag.Title = "編輯進貨單";
    var stockInStatusId = ViewBag.StockInStatusId as IEnumerable<SelectListItem>;
    stockInStatusId = stockInStatusId.Prepend(new SelectListItem { Value = "", Text = "請選擇..." });

    var supplierId = ViewBag.SupplierId as IEnumerable<SelectListItem>;
    supplierId = supplierId.Prepend(new SelectListItem { Value = "", Text = "請選擇..." });

}

<h2 class="text-center">編輯進貨單</h2>

<div class="d-flex justify-content-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="mb-3">
                @Html.LabelFor(model => model.StockInStatusId, htmlAttributes: new { @class = "form-label form-label col-md-12" })
                @Html.DropDownListFor(model => model.StockInStatusId, stockInStatusId, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.StockInStatusId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.SupplierId, htmlAttributes: new { @class = "form-label form-label col-md-12" })
                @Html.DropDownListFor(model => model.SupplierId, supplierId, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.SupplierId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "form-label form-label col-md-12" })
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.OrderRequestDate, htmlAttributes: new { @class = "form-label form-label col-md-12" })
                @Html.EditorFor(model => model.OrderRequestDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderRequestDate, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.ArrivedAt, htmlAttributes: new { @class = "form-label form-label col-md-12" })
                @Html.EditorFor(model => model.ArrivedAt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArrivedAt, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <div class="col-md-offset-2 col-md-12 mt-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12 d-flex justify-content-center mt-5">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary" style="font-size:16px"><i class="bi bi-house-door"></i>回首頁</a>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
