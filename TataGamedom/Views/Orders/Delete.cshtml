@model TataGamedom.Models.EFModels.Order

@{
    ViewBag.Title = "刪除訂單";
}

<h2>刪除訂單</h2>

<p class="text-danger">您確定要刪除此記錄?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <button type="submit" value="刪除" class="btn btn-danger mt-3 mb-3"><i class="bi bi-trash3"></i>刪除</button> 
    </div>
    <a href="@Url.Action("Edit", "Orders", new { Index = Model.Index })" class="btn btn-outline-secondary btn-sm mx-1">
        <i class="bi bi-pencil-square"></i>返回編輯
    </a>
}
