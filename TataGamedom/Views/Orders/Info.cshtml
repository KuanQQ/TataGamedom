@model IEnumerable<TataGamedom.Models.ViewModels.Orders.OrderInfoVM>

@{
    ViewBag.Title = "訂單明細";
}

<h2>訂單明細</h2>


<table class="table table-striped table-hover table-warning mb-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Index)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatusCodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipmentStatusCodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatusCodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletedAt)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Take(1))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Index)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatusCodeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipmentStatusCodeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentStatusCodeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletedAt)
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-striped table-hover table-active mt-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameCoverImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItemIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CouponDescription)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Files/Uploads/@item.GameCoverImg" style="width: 100%" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItemIndex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CouponDescription)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-12 d-flex justify-content-center">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary" style="font-size:16px"><i class="bi bi-house-door"></i>回首頁</a>
</div>
