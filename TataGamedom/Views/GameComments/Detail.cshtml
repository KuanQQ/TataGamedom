@model TataGamedom.Models.ViewModels.GameComments.GameCommentDetailVM

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div>
    <h4>GameCommentDetailVM</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MemberName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MemberName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Score)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Score)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>

    </dl>
</div>

<div class="mb-5">
    <div class="mb-3" style="display: flex; justify-content: flex-end;">
        @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-primary" })
        @if (Model.ActiveFlag)
        {
            using (Html.BeginForm("Delete", "GameComments", new { id = Model.Id }, FormMethod.Post))
            {
                <span>&nbsp;</span>
                <input type="submit" value="刪除" class="btn btn-danger" />
            }
        }
        else
        {
            using (Html.BeginForm("Restore", "GameComments", new { id = Model.Id }, FormMethod.Post))
            {
                <span>&nbsp;</span>
                <input type="submit" value="復原" class="btn btn-success" />
            }
        }
    </div>
</div>
