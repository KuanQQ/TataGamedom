<link href="~/Content/bootstrap theme.css" rel="stylesheet" />
<link href="~/Content/layoutStyle1.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .btn {
        font-size: 16px;
    }
</style>

@model TataGamedom.Models.ViewModels.InventoryItems.InventoryItemVM

@{
    ViewBag.Title = "編輯庫存明細";
    var productIndex = ViewBag.productIndex as IEnumerable<SelectListItem>;
    productIndex = productIndex.Prepend(new SelectListItem { Value = "", Text = "請選擇..." });

    var StockInSheetIndex = ViewBag.StockInSheetIndex as IEnumerable<SelectListItem>;
    StockInSheetIndex = StockInSheetIndex.Prepend(new SelectListItem { Value = "", Text = "請選擇..." });

}

<h2>編輯庫存明細</h2>

<div class="d-flex justify-content-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)



            <div class="mb-3">
                @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "form-label col-md-12" })
                @Html.DropDownListFor(model => model.ProductId, productIndex, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.StockInSheetIndex, htmlAttributes: new { @class = "form-label col-md-12" })
                @Html.DropDownListFor(model => model.StockInSheetId, StockInSheetIndex, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.StockInSheetId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "form-label col-md-12" })
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.GameKey, htmlAttributes: new { @class = "form-label col-md-12" })
                @Html.EditorFor(model => model.GameKey, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GameKey, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12 d-flex justify-content-center mt-5">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary" style="font-size:16px"><i class="bi bi-house-door"></i>回首頁</a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
