@model TataGamedom.Models.ViewModels.Games.GameEditCoverImgVM

@{
    ViewBag.Title = "EditGameCover";
}

<h2>編輯遊戲封面</h2>


@using (Html.BeginForm("EditGameCover", "Games", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="row">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.GameCoverImg)
    <div class="mb-3">
        @Html.LabelFor(model => model.GameCoverImg, htmlAttributes: new { @class = "form-label col-md-2" })
        <input type="file" name="file1" class="form-control" />
        @Html.ValidationMessageFor(model => model.GameCoverImg, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3 col-6">
        <img src="/Files/Uploads/@Model.GameCoverImg" style="width: 100%" />
    </div>


    <div class="mb-5">
        <div class="mb-3">
            <div style="text-align: right;">
                @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-primary" })
                <input type="submit" value="更新" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
