@model TataGamedom.Models.ViewModels.Games.GameEditCoverImgVM
@{
    ViewBag.Title = "EditGameCover";
}
@section Styles {
    <link href="~/Content/layoutStyle1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap theme.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/YiyierStyle.css">
}
    <div class="container">
        <h1 class="main_heading">編輯遊戲封面</h1>
        @using (Html.BeginForm("EditGameCover", "Games", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.GameCoverImg)

                <div class="mb-3 col-12">
                    @Html.LabelFor(model => model.GameCoverImg, htmlAttributes: new { @class = "form-label col-md-2" })
                    <div class="d-flex justify-content-center">
                        <img src="/Files/Uploads/@Model.GameCoverImg" style="width:50%" />
                    </div>
                </div>
                <div class="mb-3">
                    <input type="file" name="file1" class="form-control" />
                    @Html.ValidationMessageFor(model => model.GameCoverImg, "", new { @class = "text-danger" })
                </div>

                <div>
                    <div class="mb-3">
                        <div style="text-align: right;">
                            @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-primary btnColor" })
                            <input type="submit" value="更新" class="btn btn-primary btnColor" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
