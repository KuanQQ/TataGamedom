@model TataGamedom.Models.ViewModels.RegisterVM

@{
	ViewBag.Title = "Register";
}

@section Styles{
	<link href="~/Content/KuanForm2.css" rel="stylesheet" />

	<style>
	</style>
}



@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()


<form id="contact">
	<div class="container1">
		<div class="head">
			<h2>註冊會員</h2>
		</div>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="title222">
			名稱
		</div>
		<div>
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>

		<div class="title222">
			帳號
		</div>
		<div>
			@Html.EditorFor(model => model.Account, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
		</div>


		<div class="title222">
			密碼
		</div>
		<div>
			@Html.PasswordFor(model => model.CreatePassword, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.CreatePassword, "", new { @class = "text-danger" })
		</div>

		<div class="title222">
			確認密碼
		</div>
		<div>
			@Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
		</div>

		<div class="title222">
			生日
		</div>
		<div>
			@Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @type = "date" } })<br />
			@Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
		</div>

		<div class="title222">
			Email
		</div>
		<div>
			@Html.EditorFor(model => model.Email, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
		</div>

		<div class="title222">
			手機
		</div>
		<div>
			@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { } })<br />
			@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
		</div>


		<button id="submit" type="submit">創建</button>
		@Html.ActionLink("取消", "Index", "BackendMembersList", new { area = "" }, new { @class = "btn btn-danger copy " })
	</div>
	</form>

}

