@model IEnumerable<TataGamedom.Models.ViewModels.CustomerServices.FAQIndexVM>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>FAQ管理</h2>

    <p>
        @Html.ActionLink("新增FAQ", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <div style="padding-right: 10px;">
                        @Html.DisplayNameFor(model => model.IssueTypeId)
                    </div>
                </th>
                <th>
                    <div style="padding-right: 10px;">
                        @Html.DisplayNameFor(model => model.Question)
                    </div>
                </th>
                <th>
                    <div style="padding-right: 10px;">
                        @Html.DisplayNameFor(model => model.Answer)
                    </div>
                </th>
                <th>
                    <div style="padding-right: 10px;">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </div>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div style="padding-right: 10px;">
                            @Html.DisplayFor(modelItem => item.IssueTypeId)
                        </div>
                    </td>
                    <td>
                        <div style="padding-right: 10px;">
                            @Html.DisplayFor(modelItem => item.Question)
                        </div>
                    </td>
                    <td>
                        <div style="padding-right: 10px;">
                            @Html.DisplayFor(modelItem => item.Answer)
                        </div>
                    </td>
                    <td>
                        <div style="padding-right: 10px;">
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </div>
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("內容", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("刪除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>