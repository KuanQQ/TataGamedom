@section Styles{
    <link href="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.13.5/af-2.6.0/b-2.4.0/b-colvis-2.4.0/b-html5-2.4.0/b-print-2.4.0/date-1.5.0/fc-4.3.0/fh-3.4.0/r-2.5.0/sb-1.5.0/sp-2.2.0/sl-1.7.0/datatables.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        thead {
            background-color: goldenrod;
            color: white;
        }

        .vertical-align-middle {
            vertical-align: middle;
        }

        table .text-gray {
            color: lightgray !important;
        }
    </style>
}


<h2>Reports</h2>

<table class="table table-striped table-hover w-100" id="ReportTable">
    <thead>
        <tr>
            <td>序號</td>
            <td>類型</td>
            <td>時間</td>
            <td>檢舉人</td>
            <td>原因</td>
            <td>ReportedId</td>
            <td>內容</td>
            <td>被檢舉人</td>
            <td>確認</td>
            <td>處理說明</td>
            <td>完成日</td>
            <td>討論版名</td>
        </tr>
    </thead>
</table>

<div class="modal modal-lg" id="myModal" tabindex="-2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="badge text-bg-primary me-3" id="Type">Type</span><span id="Id">Id</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row">
                <div class="from col-md-6">
                    <div class="d-grid gap-2 btn-area">

                        <div class="bg-tertiary shadow-sm p-4 rounded-1">
                            <p id="Reason">檢舉啊啊啊啊啊啊啊</p>
                            <p class="text-end fs-6 text-secondary">
                                —
                                <span id="Account">我是檢舉人ㄌ</span>
                                <br/>
                                <span id="Datetime">2021-07-21</span>
                            </p>
                        </div>
                        <div class="d-flex justify-content-center align-items-center mt-3">
                            <label class="me-3">確認結果</label>
                            <textarea id="ReviewComment" class="form-control w-100 p-0 m0"></textarea>
                        </div>
                        <button id="ConfirmBtn" class="btn btn-outline-warning" type="button">
                            完成確認
                        </button>
                      
                        <p class="text-secondary text-center">
                            確認人員
                            <span class="badge text-bg-light" id="ReviewerBackendMemberAccount">
                                尚未確認
                            </span>
                            確認時間
                            <span class="badge text-bg-light" id="ReviewDatetime">
                                尚未確認
                            </span>
                        </p>

                    </div>
                </div>
                <div class="reported col-md-6">

                    <h6 class="h6 fw-bolder text-center text-decoration-underline mt-2">Reported</h6>
                    <div class="d-flex flex-column justify-content-center h-75">

                        <figure>
                            <blockquote class="blockquote fs-6">
                                <p id="ReportedContent">
                                    我被檢舉了
                                </p>
                                
                            </blockquote>
                            <figcaption class="blockquote-footer text-center" id="ReportedAccount">
                                被檢舉的某某人
                            </figcaption>
                            <figcaption class="blockquote-footer text-center" id="BoardName">
                                某個板塊啦
                            </figcaption>

                        </figure>
                        <div class="row mt-4">
                            <div id="RepotedCommentActionArea" class="col-md-6  d-flex  flex-column align-items-center justify-content-center">
                                <p class="fw-bolder .text-primary-emphasis d-block">
                                    被檢舉內容狀態
                                    <span class="badge text-bg-info d-block" id="RepotedCommStatus-1">顯示中</span>
                                    <span class="badge text-bg-secondary d-block d-none" id="RepotedCommStatus-0">已隱藏</span>
                                </p>
                                <button class="btn btn-outline-danger d-block mt-2" id="DeleContentBtn" >隱藏內容</button>
                            </div>
                            <div class="col-md-6  d-flex  flex-column align-items-center justify-content-center">

                                <p class="fw-bolder .text-primary-emphasis">
                                    被檢舉人狀態
                                    <span class="badge text-bg-info d-block" id="RepotedAccount-1">活動中</span>
                                    <span class="badge text-bg-secondary d-block d-none" id="RepotedAccount-0">已水桶</span>
                                </p>
                                <button class="btn btn-outline-danger d-block mt-2" id="AddBucketBtn">加入水桶</button>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>
            <div class="modal-footer align-items-center">
                <button type="button" class="btn btn-secondary" id="closeBtn" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>



