@model IEnumerable<TataGamedom.Models.ViewModels.OrderItemReturns.OrderItemReturnIndexVM>

@{
    ViewBag.Title = "退貨單列表";
}

<h2>退貨單列表</h2>
<div class="row pt-2 pb-3">
    <div class="col-6 align-self-center">
        <a href="@Url.Action("Create", "OrderItemReturns")" class="btn btn-outline-warning fs16">
            <i class="bi bi-plus-circle"></i>新增
        </a>
    </div>
</div>

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" data-bs-toggle="tab" href="#All" aria-selected="true" role="tab">全部</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" data-bs-toggle="tab" href="#unCompleted" aria-selected="false" role="tab">待處理</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" data-bs-toggle="tab" href="#Completed" aria-selected="false" role="tab">已完成</a>
    </li>
</ul>
<div id="TabContent" class="tab-content">
    <div class="tab-pane fade active show" id="All" role="tabpanel">
        @Html.Action("ViewAll")
    </div>
    <div class="tab-pane fade" id="unCompleted" role="tabpanel">
        <table class="table table-striped table-hover table-warning">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Index)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderIndex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItemIndex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssuedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompletedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRefunded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsReturned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsResellable)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Index)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderIndex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderItemIndex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssuedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRefundedText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsReturnedText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsResellableText)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a href="@Url.Action("Details", "OrderItemReturns", new { orderIndex = item.OrderIndex })" class="btn btn-outline-secondary btn-sm mx-1 fs14">
                                <i class="bi bi-layout-text-window"></i>明細
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="tab-pane fade" id="Completed" role="tabpanel">
        <table class="table table-striped table-hover table-warning">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Index)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderIndex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItemIndex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssuedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompletedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRefunded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsReturned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsResellable)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Index)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderIndex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderItemIndex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssuedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRefundedText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsReturnedText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsResellableText)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a href="@Url.Action("Details", "OrderItemReturns", new { orderIndex = item.OrderIndex })" class="btn btn-outline-secondary btn-sm mx-1 fs14">
                                <i class="bi bi-layout-text-window"></i>明細
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>

</div>